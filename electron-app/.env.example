# SportsData Pro Desktop - Environment Configuration
# Copy this file to .env and fill in your actual values

# MongoDB Connection (Required)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sportsdata

# Oracle Database Connection String (Pre-filled for users)
# Format: hostname:port/service_name
ORACLE_CONNECT_STRING=your_oracle_host:1521/your_service_name

# Stats API Configuration (Internal VPN-required API - no key needed)
STATS_API_URL=https://your_stats_api_url

# Express Server Configuration
PORT=5000

# Application Mode
NODE_ENV=production

# Internal Features (Oracle/Stats API access)
# Set to 'true' for Electron app to enable Data Comparison features
ENABLE_INTERNAL_FEATURES=true
