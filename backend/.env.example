# =============================================================================
# Sports Data Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# All variables are validated on startup - invalid config will prevent server start

# =============================================================================
# REQUIRED - Server will not start without these
# =============================================================================

# MongoDB connection string (must start with 'mongodb')
MONGODB_URI=mongodb+srv://your_username:your_password@your-cluster.mongodb.net/sports-data?retryWrites=true&w=majority

# Password for destructive operations (database reset, delete all data)
# Use a strong password (8+ characters) in production
DANGER_ZONE_PASSWORD=your_secure_password_here

# =============================================================================
# OPTIONAL - Have sensible defaults
# =============================================================================

# Server port (default: 5000)
PORT=5000

# Environment mode: development, production, test (default: development)
NODE_ENV=development

# CORS Origins - comma-separated list of allowed frontend origins
# Default: http://localhost:3000
CORS_ORIGINS=http://localhost:3000,https://supreme-broccoli-frontend.onrender.com

# =============================================================================
# LOGGING - Configure log behavior
# =============================================================================

# Log level: error, warn, info, http, verbose, debug, silly (default: debug)
LOG_LEVEL=debug

# Enable file logging: true, false (default: false)
# When true, logs are written to LOG_DIR/error.log and LOG_DIR/combined.log
LOG_TO_FILE=false

# Directory for log files (default: ./logs)
# Only used when LOG_TO_FILE=true
LOG_DIR=./logs

# =============================================================================
# INTERNAL FEATURES - Oracle/Stats API access (Electron app only)
# =============================================================================

# Enable internal features: true, false (default: false)
# When false:
#   - Baseline comparisons: ALLOWED (uses MongoDB only)
#   - Oracle/API comparisons: BLOCKED (requires VPN + credentials)
#   - System routes (health, dashboard): ALWAYS AVAILABLE
ENABLE_INTERNAL_FEATURES=false

# Oracle Database (required when ENABLE_INTERNAL_FEATURES=true)
ORACLE_USER=your_oracle_username
ORACLE_PASSWORD=your_oracle_password
ORACLE_CONNECTION_STRING=your_connection_string

# Stats API (required when ENABLE_INTERNAL_FEATURES=true)
# Must start with 'http'
STATS_API_URL=https://your_stats_api_url/v1/stats